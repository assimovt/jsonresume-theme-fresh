{{#if resume.languages.length}}
<section id="languages">
  <div class="left">
    <h2>Languages</h2>
  </div>

  <div class="right">
    <ul class="language inline">
    {{#each resume.languages}}
      {{#if language}}
      <li>
        {{language}}
        {{#if fluency}}
        <em>{{fluency}}</em>
        {{/if}}
      <li>
      {{/if}}
    {{/each}}
    </ul>
  </div>
</section>
{{/if}}
